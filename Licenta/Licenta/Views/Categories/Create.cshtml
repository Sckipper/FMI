@model Licenta.Models.CategoryModel
@{
    ViewBag.Title = "Categorii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
@Scripts.Render("~/bundles/Logged")

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="container pagination-centered">
        <div class="containerWrapper col-md-6 col-md-offset-3">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h3>Categorie noua:</h3>
                <br />
                <div class="form-group">
                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Categorie Superioara:</strong>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => Model.Category.CategorieID, new SelectList(Model.Categories, "Id", "Nume")
                       , new { @class = "form-control text-box single-line selectpicker" })
                            @Html.ValidationMessageFor(model => Model.Category.CategorieID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Denumire:</strong>
                        <div class="col-md-8">
                            @Html.EditorFor(model => Model.Category.Nume, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => Model.Category.Nume, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Cod:</strong>
                        <div class="col-md-8">
                            @Html.EditorFor(model => Model.Category.Cod, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => Model.Category.Cod, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Descriere:</strong>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => Model.Category.Descriere, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                            @Html.ValidationMessageFor(model => Model.Category.Descriere, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <strong class="control-label col-md-3 ">Imagine:</strong>
                        <div class="col-md-8">
                            @using (Html.BeginForm("FileUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {   <input type="file" name="file" id="file" class="col-md-8" />    }
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <input type="submit" value="Creaza" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}